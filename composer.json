{
    "name": "tykfyr/openid-connect-php",
    "description": "A simple OpenID Connect client library for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "RenÃ© Kirk",
            "email": "hey@renekirk.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Tykfyr\\OpenIDConnect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tykfyr\\OpenIDConnect\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
} 